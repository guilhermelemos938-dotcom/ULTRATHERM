                <div>
                  <h2 className="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
                    Por Que Escolher a Ultratherm?
                  </h2>
                  <ul className="space-y-4">
                    {[
                      'Mais de 14 anos de experiência comprovada',
                      'Equipe técnica altamente qualificada',
                      'Tecnologia de ponta e inovação constante',
                      'Atendimento personalizado para cada cliente',
                      'Compromisso com qualidade e segurança',
                      'Suporte técnico disponível 24/7'
                    ].map((item, index) => (
                      <motion.li
                        key={index}
                        initial={{ opacity: 0, x: -20 }}
                        whileInView={{ opacity: 1, x: 0 }}
                        viewport={{ once: true }}
                        transition={{ duration: 0.5, delay: index * 0.1 }}
                        className="flex items-start gap-3"
                      >
                        <div className="w-6 h-6 bg-brand-blue rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                          <svg className="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                          </svg>
                        </div>
                        <span className="text-gray-700">{item}</span>
                      </motion.li>
                    ))}
                  </ul>
                </div>
                <div className="bg-gradient-to-br from-blue-100 to-blue-50 rounded-xl p-8 text-center">
                  <div className="bg-brand-blue w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
                    <Flame className="w-10 h-10 text-white" />
                  </div>
                  <h3 className="text-2xl font-bold text-gray-900 mb-4">
                    Pronto para começar?
                  </h3>
                  <p className="text-gray-600 mb-6">
                    Entre em contato conosco e solicite um orçamento personalizado
                  </p>
                  <a
                    href="/contact"
                    className="inline-block bg-brand-blue hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                  >
                    Solicitar Orçamento
                  </a>
                </div>
              </div>
            </motion.div>
          </div>
        </section>
      </div>
    </>
  );
};

export default ServicesPage;
